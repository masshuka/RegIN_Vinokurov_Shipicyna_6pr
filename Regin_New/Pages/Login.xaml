<Page x:Class="Regin_New.Pages.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Regin_New.Pages"
      xmlns:uc="clr-namespace:Regin_New.Elements"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid x:Name="MainGrid">
        <materialDesign:Card Height="420"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Width="300">
            <Grid>
                <Image x:Name="User"
                   HorizontalAlignment="Center"
                   Height="100"
                   Margin="32"
                   VerticalAlignment="Top"
                   Width="100"
                   Source="/Images/ic-user.png">
                    <Image.Clip>
                        <EllipseGeometry RadiusX="50" RadiusY="50" Center="50,50"/>
                    </Image.Clip>
                </Image>
                <Label x:Name="Username"
                   Margin="10,127,10,0"
                   HorizontalContentAlignment="Center"
                   Content=""
                   VerticalAlignment="Top"/>
                <Label Content="Enter Login:"
                   Margin="10,161,10,0"
                   VerticalAlignment="Top"/>
                <TextBox x:Name="TbLogin"
                     Height="23"
                     Margin="10,185,10,0"
                     TextWrapping="Wrap"
                     Text=""
                     VerticalAlignment="Top"
                     KeyUp="SetLogin"
                     LostFocus="SetLogin"/>
                <uc:ElementCapture 
                    x:Name="Capture"
                    HorizontalAlignment="Center"
                    Width="280"
                    Margin="10,213,10,0"
                    Height="100"
                    VerticalAlignment="Top"/>
                <Label x:Name="PasswordLabel" 
                   Content="Enter password:"
                   Margin="10,318,10,0"
                   VerticalAlignment="Top"/>
                <PasswordBox x:Name="TbPassword"
                         Margin="10,342,10,0"
                         VerticalAlignment="Top"
                         Height="26"
                         KeyUp="SetPassword"/>

                <!-- Контейнер для PIN-кода -->
                <StackPanel x:Name="PinCodeContainer" 
                          Visibility="Collapsed"
                          Margin="10,318,10,0"
                          VerticalAlignment="Top">
                    <Label Content="Enter PIN-code (4 digits):"
                           FontSize="11"
                           Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PinCodeBox"
                             Height="26"
                             MaxLength="4"
                             KeyUp="PinCodeBox_KeyUp"/>
                </StackPanel>


                <Label Content="Use PIN-code"
                       FontSize="10"
                       Foreground="#FF1F92B5"
                       Margin="140,398,0,0"
                       VerticalAlignment="Top"
                       MouseDown="SwitchToPinCode"
                       HorizontalAlignment="Left"
                       Width="110"/>
                
                <Label Content="Forgot your password?"
                   Margin="10,398,0,0"
                   VerticalAlignment="Top"
                   Foreground="#FF1F92B5"
                   FontSize="10"
                   MouseDown="RecoveryPassword"
                   HorizontalAlignment="Left"
                   Width="110"/>
                <Label Content="Registration"
                   Margin="0,398,10,0"
                   VerticalAlignment="Top"
                   Foreground="#FF1F92B5"
                   FontSize="10"
                   MouseDown="OpenRegIn"
                   HorizontalAlignment="Right"
                   Width="62"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>
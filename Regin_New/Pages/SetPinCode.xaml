<Page x:Class="Regin_New.Pages.SetPinCode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Set Pin Code">

    <Grid>
        <materialDesign:Card Height="300" Width="300"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
            <StackPanel Margin="20">
                <TextBlock x:Name="TitleTextBlock"
                         FontSize="16" FontWeight="Bold"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,20"/>

                <TextBlock x:Name="DescriptionTextBlock"
                         TextWrapping="Wrap"
                         Margin="0,0,0,20"/>

                <TextBox x:Name="PinCodeTextBox"
                       MaxLength="4"
                       FontSize="24"
                       HorizontalContentAlignment="Center"
                       PreviewTextInput="PinCodeTextBox_PreviewTextInput"
                       TextChanged="PinCodeTextBox_TextChanged"
                       Margin="0,0,0,20"/>

                <Button Content="Пропустить"
                      Click="SkipButton_Click"
                      Background="#FF1F92B5"
                      HorizontalAlignment="Center"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Page>
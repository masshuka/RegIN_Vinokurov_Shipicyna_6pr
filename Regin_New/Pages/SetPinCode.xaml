<Page x:Class="Regin_New.Pages.SetPinCode"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Regin_New.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SetPinCode">

    <Grid>
        <materialDesign:Card Height="300" Width="300"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center">
            <StackPanel Margin="20">
                <TextBlock Text="Установите 4-значный пин-код"
                         FontSize="16" FontWeight="Bold"
                         HorizontalAlignment="Center"
                         Margin="0,0,0,20"/>

                <TextBlock Text="Пин-код будет использоваться для быстрой авторизации"
                         TextWrapping="Wrap"
                         Margin="0,0,0,20"/>

                <TextBox x:Name="PinCodeTextBox"
                       MaxLength="4"
                       FontSize="24"
                       HorizontalContentAlignment="Center"
                       PreviewTextInput="PinCodeTextBox_PreviewTextInput"
                       TextChanged="PinCodeTextBox_TextChanged"
                       Margin="0,0,0,20"/>

                <Button Content="Пропустить"
                      Click="SkipButton_Click"
                      HorizontalAlignment="Center"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</Page>